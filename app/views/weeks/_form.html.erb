<td><%= date_select :week, :start_date %></td>
<% Week.roles.each do |role| %>
<% if role == week.assignments.select{|assignment| assignment.role == role}[0].role %>
    <%= f.fields_for :assignments,  class: "form-control input-md-3"  do |assignment_fields| %>
      <% if role == assignment_fields.object.role %>
        <td id="assignment">
          <%= assignment_fields.collection_select(:person_id, Person.with_role(assignment_fields.object.role), :id, :name, include_blank: true)%>
        </td>
        <%= assignment_fields.hidden_field(:role) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<td><div ><%= f.submit class: 'btn btn-success' %><div></td>
