<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "Sandi Metz" %>
  </div>
  <div class="field">
    <%= f.label :roles %><br>
    <% Role.all.each do |role| %>
      <%= f.check_box "roles", {multiple: true}, role.name, nil%>
      <%= h role.name %>
      <% f.hidden_field role.id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :team %>
    <%= f.select :team, options_for_select(Person.teams) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
