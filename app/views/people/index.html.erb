<p id="notice"><%= notice %></p>

<h1>People</h1>

<table class="table table-bordered" data-module="filterable-table">
  <thead>
    <tr class="table-header">
      <th>Name</th>
      <th>Roles</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
    <%= render partial: "govuk_admin_template/table_filter",
      locals: {placeholder: "Filter items"} %>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <% if person.active? %>
          <td><%= person.name %></td>
          <%= render 'roles', person: person %>
          <td><%= person.team %></td>
          <td><%= link_to 'Show', person %></td>
          <td class="edit"><%= link_to 'Edit', edit_person_path(person) %></td>
          <td class="delete"><%= link_to 'Delete', person, method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

